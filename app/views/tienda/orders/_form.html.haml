= field_set_tag t('tienda.orders.billing_address') do
  .row
    .col-md-4
      .form-group
      = f.label :first_name, t('tienda.orders.first_name')
      = f.text_field :first_name, class: 'focus form-control'
    .col-md-4
      .form-group
      = f.label :last_name, t('tienda.orders.last_name')
      = f.text_field :last_name, class: 'form-control'
    .col-md-4
      .form-group
      = f.label :company, t('tienda.orders.company')
      = f.text_field :company, class: 'form-control'
  .row
    .col-md-12
      &nbsp;
  .row
    .col-md-12
      .form-group
        = f.label :billing_address1, t('tienda.orders.address')
        = f.text_field :billing_address1, class: 'form-control'
        = f.text_field :billing_address2, class: 'form-control'
        = f.text_field :billing_address3, class: 'form-control'
        = f.text_field :billing_address4, class: 'form-control'
  .row
    .col-md-12
      &nbsp;
  .row
    .col-md-6
      .form-group
        = f.label :billing_postcode, t('tienda.orders.post_code')
        = f.text_field :billing_postcode, class: 'form-control'
    .col-md-6
      .form-group
        = f.label :billing_country_id, t('tienda.orders.country')
        = f.collection_select :billing_country_id, Tienda::Country.ordered, :id, :name, {include_blank: true}, {class: 'form-control', data: {placeholder: t('tienda.orders.select_country')}}
  .row
    .col-md-12
      &nbsp;
  .row
    .col-md-4
      .form-group
        = f.label :email_address, t('tienda.orders.email_address')
        = f.text_field :email_address, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :phone_number, t('tienda.orders.phone_number')
        = f.text_field :phone_number, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :separate_delivery_address, t('tienda.orders.separate_delivery_address')
        .checkbox
          %label
            = f.check_box :separate_delivery_address
            = t('tienda.orders.use_separate_delivery_address?')

